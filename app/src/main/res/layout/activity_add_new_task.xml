<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_img"
    android:orientation="vertical"
    tools:context=".AddNewTaskActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_add_text"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@android:color/transparent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/arrow_back"
                android:background="@android:color/transparent"
                android:importantForAccessibility="no"
                app:tint="@color/white"
                />

            <TextView
                android:id="@+id/app_bar_title"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Create new note"
                android:textSize="20dp"
                android:paddingStart="10dp"
                android:textColor="@color/white"
                app:layout_constraintBaseline_toTopOf="parent"
                />

            <ImageButton
                android:id="@+id/reset_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/auto_renew"
                android:background="@drawable/roundable_button"
                android:layout_marginStart="10dp"
                android:importantForAccessibility="no"
                app:tint="@color/white"
                />

            <ImageButton
                android:id="@+id/add_task_button_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/done"
                android:background="@drawable/roundable_button"
                android:importantForAccessibility="no"
                android:layout_margin="5dp"
                app:tint="@color/white"
                />


        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friday , 10-02-2003"
        android:layout_marginHorizontal="16dp"
        />
    <EditText
        android:id="@+id/task_title_edit_text"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="text"
        android:autofillHints="New Task"
        android:hint="UnTitle"
        android:textStyle="bold"
        android:text="Untitle"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="16dp"
        />
    <EditText
        android:id="@+id/task_body_edit_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="10dp"
        android:hint="Type here..."
        android:inputType="textMultiLine"
        android:gravity="top|start"
        android:maxLines="100"
        android:scrollbars="vertical"
        android:overScrollMode="always"
        android:textColor="@color/white"
        />
    </LinearLayout>
